<!-- app/views/characters/created.html.erb -->
<div class="flash notice" style="background:#e6ffed;border:1px solid #a4f3b5;padding:12px;border-radius:6px;margin-bottom:12px;">
  キャラクターを作成しました。
</div>

<p>2秒後にバトル画面へ移動します…</p>

<!-- JS で 2 秒後に遷移 -->
<script>
  setTimeout(function () {
    window.location = "<%= @redirect_url %>";
  }, 2000);
</script>

<!-- JS が無効な人向けフォールバック -->
<noscript>
  <p><a href="<%= @redirect_url %>">こちらをクリックしてバトルを開始</a></p>
</noscript>