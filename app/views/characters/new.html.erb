<!-- app/views/characters/new.html.erb -->
<h1>キャラクター作成</h1>

<% if flash[:alert] %>
  <div style="color:#b00;margin:8px 0;"><%= flash[:alert] %></div>
<% end %>

<%= form_with scope: :character, url: characters_path, method: :post, local: true do |f| %>
  <div style="margin:12px 0;">
    <label>名前</label><br>
    <%= f.text_field :name, required: true, placeholder: "Hero" %>
  </div>

  <div style="margin:12px 0;">
    <label>属性</label><br>
    <%= f.collection_select :element_id, @elements, :id, :name, prompt: "選択してください", required: true %>
  </div>

  <!-- base_hp はDB側 default:5 があれば不要。念のため固定で送るなら hidden でもOK
  <%= f.hidden_field :base_hp, value: 5 %>
  -->

  <div style="margin:16px 0;">
    <%= f.submit "作成する", style: "padding:8px 16px;border-radius:6px;background:#21c57b;font-weight:700;" %>
  </div>
<% end %>