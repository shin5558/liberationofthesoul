<h1>キャラクター作成</h1>

<%= form_with model: @player,
              url: characters_path,
              autocomplete: "off" do |f| %>
  <div>
    <%= f.label :name_kana, "なまえ（カタカナ）" %><br>
    <%= f.text_field :name_kana, autocomplete: "off" %>
  </div>

  <div>
    <%= f.label :gender, "せいべつ" %><br>
    <%= f.select :gender,
          Player.genders.keys.map { |g| [g, g] },
          {}, {} %>
  </div>

  <div style="margin-top: 16px;">
    <%= f.submit "次へ", class: "btn" %>
  </div>
<% end %>