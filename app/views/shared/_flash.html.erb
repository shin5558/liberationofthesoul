<% flash.each do |type, message| %>
  <% next if message.blank? %>
  <div
    class="flash-<%= type %>"
    style="margin:16px auto;max-width:960px;padding:12px 16px;border-radius:8px;
           <%= type.to_s == "notice" ? "background:#e6ffed;color:#065f46;border:1px solid #a7f3d0;" :
                                        "background:#fee2e2;color:#991b1b;border:1px solid #fecaca;" %>">
    <%= message %>
  </div>
<% end %>